.page-header
  %h1 Listing Users
.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Email
        %th Admin
        %th
    %tbody
      = content_tag_for(:tr, @users) do |user|
        %td= user.email
        %td= user.admin
        %td= link_to 'Edit', "/users/#{user.id}/edit"
